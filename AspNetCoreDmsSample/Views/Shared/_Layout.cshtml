@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DMS - Sample - @Context.Session.GetString("PrimaryServerType")</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap4.css" />
        <link rel="stylesheet" href="~/css/sb-admin.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/jquery-ui.css"/>
        <link rel="stylesheet" href="~/css/jquery-ui.structure.css"/>
        <link rel="stylesheet" href="~/css/jquery-ui.theme.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.0.0/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap4.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sb-admin.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/jquery-ui.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/jquery-ui.structure.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/jquery-ui.theme.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="fixed-nav bg-dark" id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">DMSSample</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="menuAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="People">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapsePeople" data-parent="#menuAccordion">
                        <i class="fa fa-fw fa-user"></i>
                        <span class="nav-link-text">People</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapsePeople">
                        <li><a asp-area="" asp-controller="Person" asp-action="Index">Person</a></li>
                        <li><a asp-area="" asp-controller="Player" asp-action="Index">Player</a></li>
                        <li><a asp-area="" asp-controller="NameData" asp-action="Index">Name Data</a></li>
                        <li><a asp-area="" asp-controller="SportTeam" asp-action="Index">Sport Team</a></li>
                    </ul>
                </li>    
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Ticket">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseTicket" data-parent="#menuAccordion">
                        <i class="fa fa-fw fa-ticket"></i>
                        <span class="nav-link-text">Ticket</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseTicket">
                        <li><a asp-area="" asp-controller="SportingEventTicket" asp-action="Index">Sporting Event Ticket</a></li>
                        <li><a asp-area="" asp-controller="TicketPurchaseHist" asp-action="Index">Ticket Purchase History</a></li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="League">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseLeague" data-parent="#menuAccordion">
                        <i class="fa fa-fw fa-trophy"></i>
                        <span class="nav-link-text">League</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseLeague">
                        <li><a asp-area="" asp-controller="SportLeague" asp-action="Index">Sport League</a></li>
                        <li><a asp-area="" asp-controller="SportDivision" asp-action="Index">Sport Division</a></li>
                        <li><a asp-area="" asp-controller="SportingEvent" asp-action="Index">Sporting Event</a></li>
                        <li><a asp-area="" asp-controller="SportType" asp-action="Index">Sport Type</a></li>
                    </ul>
                </li>    
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Location">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseLocation" data-parent="#menuAccordion">
                        <i class="fa fa-fw fa-globe"></i>
                        <span class="nav-link-text">Location</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseLocation">
                        <li><a asp-area="" asp-controller="SportTeam" asp-action="Index">Sport Team</a></li>
                        <li><a asp-area="" asp-controller="Seat" asp-action="Index">Seat</a></li>
                        <li><a asp-area="" asp-controller="SeatType" asp-action="Index">Seat Type</a></li>
                        <li><a asp-area="" asp-controller="SportLocation" asp-action="Index">Sport Location</a></li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Reports">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseReports" data-parent="#menuAccordion">
                        <i class="fa fa-fw fa-address-book"></i>
                        <span class="nav-link-text">Reports</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseReports">
                        <li><a asp-area="" asp-controller="Report" asp-action="ReplicaCompareRecords">Replica Compare Records</a></li>
                        <li><a asp-area="" asp-controller="Report" asp-action="ReplicationStatistics">Replication Statistics</a></li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Link">
                    <a asp-controller="Home" asp-action="About" class="nav-link">
                        <i class="fa fa-fw fa-question"></i>
                        <span class="nav-link-text">About</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Link">
                    <a asp-controller="Home" asp-action="Contact" class="nav-link">
                        <i class="fa fa-fw fa-phone"></i>
                        <span class="nav-link-text">Contact</span>
                    </a>
                </li>
            </ul>
            <!-- Toggler -->
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                <a class="nav-link text-center" id="sidenavToggler">
                    <i class="fa fa-fw fa-angle-left"></i>
                </a>
                </li>
            </ul>
            <!-- Top -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle mr-lg-2" id="infoDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-fw fa-info-circle"></i>
                        <span class="d-lg-none">Information
                        </span>
                        <span class="indicator d-none d-lg-block @(String.IsNullOrEmpty(Context.Session.GetString("PrimaryServerType")) ? "text-danger" : "text-success")">
                        <i class="fa fa-fw fa-circle"></i>
                        </span>
                    </a>
                    <div class="dropdown-menu @(String.IsNullOrEmpty(Context.Session.GetString("PrimaryServerType")) ? "bg-danger" : "bg-success") text-white p-2" aria-labelledby="messagesDropdown">
                        
                        <h6 class="dropdown-header-primary">Session Info</h6>
                        <div class="dropdown-divider"></div>

                        <div class="small">Primary Server Type</div>
                        <div class="dropdown-message font-weight-bold">@Context.Session.GetString("PrimaryServerType")@(String.IsNullOrEmpty(Context.Session.GetString("PrimaryServerType")) ? "[UNDEFINED]" : "®")</div>

                        <div class="dropdown-divider"></div>

                        <div class="small">Version</div>
                        <div class="dropdown-message font-weight-bold">@GetType().Assembly.GetName().Version.ToString()</div>

                        <div class="dropdown-divider"></div>

                        <strong class="small">Server Name</strong>
                        <div class="dropdown-message font-weight-bold">@Environment.MachineName</div>
                        
                    </div>
                </li>
                @{ await Html.RenderPartialAsync("_Search"); }
                <li class="nav-item">
                <a asp-controller="Home" asp-action="Logout" class="nav-link">
                    <i class="fa fa-fw fa-sign-out"></i>Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="content-wrapper">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery.easing/jquery.easing.min.js"></script>
        <script src="~/lib/chart.js/Chart.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/sb-admin-charts.min.js" asp-append-version="true"></script>
        <script src="~/js/sb-admin.min.js" asp-append-version="true"></script>
        <script src="~/js/jquery-ui.min.js" asp-append-version="true"></script>
        <div class="container">
            @RenderBody()
            <hr>
        </div>
    </div>
    <footer class="sticky-footer">
        <div class="container">
            <div class="row">
                <div class="col">
                    <b>&copy; @DateTime.Today.Year - DMSSample</b>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    
</body>
</html>
