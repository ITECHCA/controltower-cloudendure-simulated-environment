@model PaginatedList<DMSSample.Models.NameData>

@if (Model.Count() > 0) {
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="@Url.Action("Details", "NameData", new { NameType = item.NameType, Name = item.Name })" class="btn btn-outline-success rounded-circle la-button-sm"><i class="fa fa-ellipsis-h la-icon-details" title="Details"></i></a>
                <a href="@Url.Action("Delete", "NameData", new { NameType = item.NameType, Name = item.Name })" class="btn btn-outline-danger rounded-circle la-button-sm"><i class="fa fa-trash la-icon-delete" title="Delete"></i></a>
            </td>
        </tr>
    }
} else {
    <tr>
        <td colspan="3" class="text-center">
            <div class="badge-primary rounded">
                <i class="fa fa-info-circle"></i>
                The search returned no records.
            </div>
        </td>
    </tr>
}


@if (Model.HasNextPage) {
    <tr id="lineMore">
        <td colspan="3" class="text-center" id="pnlMore">
            <button id="btnMore" class="btn form-control btn-primary">
                <i class="fa fa-download"></i> Load More
                <input type="hidden" id="pageIndex" value="@Model.PageIndex"/>
            </button>
        </td>
    </tr>

    <script src="~/js/site.list.partial.js" asp-append-version="true"></script>
}