@model DMSSample.Models.Person

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<div class="card card-register mx-auto mt-5">
    <div class="card-header">Edit a Person</div>
    <div class="card-body">
        <form asp-action="Edit">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="FullName" class="control-label">@Html.DisplayNameFor(model => model.FullName)</label>
                        <input asp-for="FullName" class="form-control" aria-describedby="fullNameHelp" placeholder="Enter full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="LastName" class="control-label">@Html.DisplayNameFor(model => model.LastName)</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="FirstName" class="control-label">@Html.DisplayNameFor(model => model.FirstName)</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
