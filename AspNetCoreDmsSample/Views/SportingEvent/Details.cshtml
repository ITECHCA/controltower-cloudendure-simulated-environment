@model DMSSample.Models.SportingEvent

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Details";
}
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Sporting Event Details</div>
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StartDate)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.StartDateTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StartDateTime)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SoldOut)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SoldOut)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.HomeTeam)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.HomeTeam.Name)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.AwayTeam)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AwayTeam.Name)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Location.City)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SportTypeNameNavigation)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SportTypeNameNavigation.Name)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
    <p></p>
</div>
