@model PaginatedList<DMSSample.Models.TicketPurchaseHist>

@{
    ViewData["Title"] = "Ticket Purchase";
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Ticket Purchase History
        | <a asp-action="Create" class="btn btn-outline-info rounded-circle la-button-sm" title="Create New"><i class="fa fa-plus la-icon-add"></i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a href="#" action="/TicketPurchaseHist/SearchList" sort-order="price" sort-direction="">Price</a>
                        </th>
                        <th>
                            <a href="#" action="/TicketPurchaseHist/SearchList" sort-order="purchased_by" sort-direction="">Purchased By</a>
                        </th>
                        <th>
                            <a href="#" action="/TicketPurchaseHist/SearchList" sort-order="seat" sort-direction="">Seat</a>
                        </th>
                        <th>
                            <a href="#" action="/TicketPurchaseHist/SearchList" sort-order="transferred_from" sort-direction="">Transferred From</a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tableContents" action-data="/TicketPurchaseHist/SearchList">
                    <tr>
                        <td colspan="5" class="text-center">
                            <i class="fa fa-refresh fa-spin" style="font-size:24px"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="~/js/site.list.js" asp-append-version="true"></script>
</div>