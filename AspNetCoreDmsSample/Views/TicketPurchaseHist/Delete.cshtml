@model DMSSample.Models.TicketPurchaseHist

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Delete";
}
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Delete Ticket Purchase History</div>
    <div class="card-body">
        <form asp-action="Delete">
            <div class="alert alert-danger">
                <i class="fa fa-exclamation"></i>
                Are you sure you want to delete this?
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.PurchasePrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PurchasePrice)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PurchasedBy)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PurchasedBy.FullName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SportingEventTicket)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SportingEventTicket.Seat)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.TransferredFrom)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TransferredFrom.FullName)
                </dd>
            </dl>
            <input type="hidden" asp-for="SportingEventTicketId" />
            <input type="hidden" asp-for="PurchasedById" />
            <input type="hidden" asp-for="TransactionDateTime" />
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>
            </div>
    </form>
</div>
