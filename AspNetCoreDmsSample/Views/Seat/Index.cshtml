@model PaginatedList<DMSSample.Models.Seat>

@{
    ViewData["Title"] = "Seats";
}

<input type="hidden" id="searchString" value="@ViewData["SearchString"]"/>
<input type="hidden" id="sortOrder"/>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Seats List
        | <a asp-action="Create" class="btn btn-outline-info rounded-circle la-button-sm" title="Create New"><i class="fa fa-plus la-icon-add"></i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a href="#" action="/Seat/SearchList" sort-order="sport_location" sort-direction="">City</a>
                        </th>
                        <th>
                            <a href="#" action="/Seat/SearchList" sort-order="seat_level" sort-direction="">Level</a>
                        </th>
                        <th>
                            <a href="#" action="/Seat/SearchList" sort-order="seat_section" sort-direction="">Section</a>
                        </th>
                        <th>
                            <a href="#" action="/Seat/SearchList" sort-order="seat_row" sort-direction="">Row</a>
                        </th>
                        <th>
                            <a href="#" action="/Seat/SearchList" sort-order="seat" sort-direction="">Seat</a>
                        </th>
                        <th>
                            <a href="#" action="/Seat/SearchList" sort-order="seat_type" sort-direction="">Type</a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tableContents" action-data="/Seat/SearchList">
                    <tr>
                        <td colspan="7" class="text-center">
                            <i class="fa fa-refresh fa-spin" style="font-size:24px"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="~/js/site.list.js" asp-append-version="true"></script>
</div>