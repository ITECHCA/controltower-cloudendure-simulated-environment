@model DMSSample.Models.Seat

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Delete";
}
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Delete Seat</div>
    <div class="card-body">
        <form asp-action="Delete">
            <div class="alert alert-danger">
                <i class="fa fa-exclamation"></i>
                Are you sure you want to delete this?
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.SportLocation)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SportLocation.Name)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.SeatLevel)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SeatLevel)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.SeatSection)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SeatSection)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.SeatRow)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SeatRow)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Seat1)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Seat1)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.SeatType)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SeatType)
                        </dd>
                    </dl>
                </div>
            </div>
            <input type="hidden" asp-for="SportLocationId" />
            <input type="hidden" asp-for="SeatLevel" />
            <input type="hidden" asp-for="SeatSection" />
            <input type="hidden" asp-for="SeatRow" />
            <input type="hidden" asp-for="Seat1" />
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>
            </div>
        </form>
    </div>
</div>
