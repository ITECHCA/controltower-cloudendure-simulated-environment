@model DMSSample.Models.Seat

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="card card-register mx-auto mt-5">
    <div class="card-header">Create a Seat</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="SportLocationId" class="control-label"></label>
                        <select asp-for="SportLocationId" class ="form-control" asp-items="ViewBag.SportLocationId"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label asp-for="SeatLevel" class="control-label"></label>
                        <input asp-for="SeatLevel" class="form-control" />
                        <span asp-validation-for="SeatLevel" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SeatSection" class="control-label"></label>
                        <input asp-for="SeatSection" class="form-control" />
                        <span asp-validation-for="SeatSection" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label asp-for="SeatRow" class="control-label"></label>
                        <input asp-for="SeatRow" class="form-control" />
                        <span asp-validation-for="SeatRow" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Seat1" class="control-label"></label>
                        <input asp-for="Seat1" class="form-control" />
                        <span asp-validation-for="Seat1" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="SeatType" class="control-label"></label>
                        <select asp-for="SeatType" class ="form-control" asp-items="ViewBag.SeatType"></select>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
