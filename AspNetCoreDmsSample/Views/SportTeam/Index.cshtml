@model PaginatedList<DMSSample.Models.SportTeam>

@{
    ViewData["Title"] = "Sport Teams";
}
<input type="hidden" id="searchString" value="@ViewData["SearchString"]"/>
<input type="hidden" id="sortOrder"/>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Sport Teams List
        | <a asp-action="Create" class="btn btn-outline-info rounded-circle la-button-sm" title="Create New"><i class="fa fa-plus la-icon-add"></i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a href="#" action="/SportTeam/SearchList" sort-order="name" sort-direction="">Name</a>
                        </th>
                        <th>
                            <a href="#" action="/SportTeam/SearchList" sort-order="abbreviated_name" sort-direction="">Abbreviated Name</a>
                        </th>
                        <th>
                            <a href="#" action="/SportTeam/SearchList" sort-order="sport_league_short_name" sort-direction="">League</a>
                        </th>
                        <th>
                            <a href="#" action="/SportTeam/SearchList" sort-order="sport_division_short_name" sort-direction="">Division</a>
                        </th>
                        <th>
                            <a href="#" action="/SportTeam/SearchList" sort-order="home_field" sort-direction="">Home Field</a>
                        </th>
                        <th>
                            <a href="#" action="/SportTeam/SearchList" sort-order="sport_type" sort-direction="">Sport</a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tableContents" action-data="/SportTeam/SearchList">
                    <tr>
                        <td colspan="7" class="text-center">
                            <i class="fa fa-refresh fa-spin" style="font-size:24px"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="~/js/site.list.js" asp-append-version="true"></script>
</div>