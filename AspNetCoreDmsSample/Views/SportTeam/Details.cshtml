@model DMSSample.Models.SportTeam

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Details";
}
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Team Details</div>
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.AbbreviatedName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AbbreviatedName)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                    @Html.DisplayNameFor(model => model.SportTypeNameNavigation.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SportTypeNameNavigation.Name)
                    </dd>
                </dl>
            </div>
        </div>
         <div class="form-row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.HomeField.City)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.HomeField.City)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SportLeagueShortName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SportLeagueShortName)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SportDivisionShortName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SportDivisionShortName)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
    <p></p>
</div>

