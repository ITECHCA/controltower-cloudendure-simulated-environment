@model DMSSample.Models.SportLocation

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="card card-register mx-auto mt-5">
    <div class="card-header">Create a Sport Location</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-4">
                        <label asp-for="SeatingCapacity" class="control-label"></label>
                        <input asp-for="SeatingCapacity" class="form-control" />
                        <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Levels" class="control-label"></label>
                        <input asp-for="Levels" class="form-control" />
                        <span asp-validation-for="Levels" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Sections" class="control-label"></label>
                        <input asp-for="Sections" class="form-control" />
                        <span asp-validation-for="Sections" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
