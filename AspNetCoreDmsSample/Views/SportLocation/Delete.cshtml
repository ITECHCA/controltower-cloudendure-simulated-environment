@model DMSSample.Models.SportLocation

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewData["Title"] = "Delete";
}
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Delete Sport Location</div>
    <div class="card-body">
        <form asp-action="Delete">
            <div class="alert alert-danger">
                <i class="fa fa-exclamation"></i>
                Are you sure you want to delete this?
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.City)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.SeatingCapacity)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SeatingCapacity)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Levels)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Levels)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Sections)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Sections)
                        </dd>
                    </dl>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>
            </div>
        </form>
    </div>
</div>
