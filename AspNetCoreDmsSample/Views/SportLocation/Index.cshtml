@model PaginatedList<DMSSample.Models.SportLocation>

@{
    ViewData["Title"] = "Sport Location";
}
<input type="hidden" id="searchString" value="@ViewData["SearchString"]"/>
<input type="hidden" id="sortOrder"/>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Sport Locations List
        | <a asp-action="Create" class="btn btn-outline-info rounded-circle la-button-sm" title="Create New"><i class="fa fa-plus la-icon-add"></i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a href="#" action="/SportLocation/SearchList" sort-order="location" sort-direction="">Location</a>
                        </th>
                        <th>
                            <a href="#" action="/SportLocation/SearchList" sort-order="city" sort-direction="">City</a>
                        </th>
                        <th>
                            <a href="#" action="/SportLocation/SearchList" sort-order="capacity" sort-direction="">Capacity</a>
                        </th>
                        <th>
                            <a href="#" action="/SportLocation/SearchList" sort-order="levels" sort-direction="">Levels</a>
                        </th>
                        <th>
                            <a href="#" action="/SportLocation/SearchList" sort-order="sections" sort-direction="">Sections</a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tableContents" action-data="/SportLocation/SearchList">
                    <tr>
                        <td colspan="6" class="text-center">
                            <i class="fa fa-refresh fa-spin" style="font-size:24px"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="~/js/site.list.js" asp-append-version="true"></script>
</div>